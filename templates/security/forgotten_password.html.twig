{% extends 'base.html.twig' %}
{% block body %}
 
<div class="container d-flex flex-column">
	<div class="row align-items-center justify-content-center no-gutters min-vh-100">
		<div class="col-lg-5 col-md-8 py-8 py-xl-0">
			<!-- Card -->
			<div class="card shadow">
				<!-- Card body -->
				<div class="card-body p-6">
					<div class="mb-4">
						<a href="../index.html"><img src="../assets/images/brand/logo/logo-icon.svg" class="mb-4" alt="" /></a>
						<h1 class="mb-1 font-weight-bold">Forgot Password</h1>
						<p>Fill the form to reset your password.</p>
						<section class="section register ">
							{% for message  in app.flashes('message') %}
								<div class="alert alert-danger">
									{{ message }}
								</div>
							{% endfor %}
						</section>
						<section class="section register ">
							{% for danger  in app.flashes('danger') %}
								<div class="alert alert-info">
									{{ danger }}
								</div>
							{% endfor %}
						</section>
					</div>
						<!-- Form -->
						{{ form_start(emailForm , {'attr':{novalidate: 'novalidate'}} ) }}
							<!-- Email -->
						<div class="form-group">
							<label for="email" class="form-label">Email</label>
							{{ form_widget(emailForm.Email , {'attr' : {'class' : 'form-control ', 'placeholder':'Email'}})}}
						</div>
							<!-- Button -->
						<div class="mb-3">
							{{ form_widget(emailForm.envoyer , {'attr' : {'class' : 'btn btn-primary btn-block' }})}}
						</div>
						<span>Return to <a href="sign-in.html">sign in</a></span>
						{{ form_end(emailForm)}}
				</div>
			</div>
		</div>
	</div>
</div> 
{% endblock %}
