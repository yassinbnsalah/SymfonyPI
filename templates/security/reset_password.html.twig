
{% extends 'base.html.twig' %}
{% block body %}
<div class="container d-flex flex-column">
	<div class="row align-items-center justify-content-center no-gutters min-vh-100">
		<div class="col-lg-5 col-md-8 py-8 py-xl-0">
			<!-- Card -->
			<div class="card shadow">
				<!-- Card body -->
				<div class="card-body p-6">
					<div class="mb-4">
						<a href="../index.html"><img src="../assets/images/brand/logo/logo-icon.svg" class="mb-4" alt="" /></a>
						<h1 class="mb-1 font-weight-bold">Forgot Password</h1>
						<p>Fill the form to reset your password.</p>
					</div>
						<!-- Form -->
            {{ form_start(form , {'attr':{novalidate: 'novalidate'}} ) }}
							<!-- Email -->
						<div class="form-group">
							<label for="email" class="form-label">New Password</label>
              {{ form_widget(form.Password , {'attr' : {'class' : 'form-control' , 'placeholder':'Password'}})}}
						</div>
            <div class="form-group">
							<label for="email" class="form-label">Confirme Password</label>
              {{ form_widget(form.confirm_password , {'attr' : {'class' : 'form-control' , 'placeholder':'Password'}})}}
						</div>
							<!-- Button -->
						<div class="mb-3">
              {{ form_widget(form.save , {'attr' : {'class' : 'btn btn-primary' }})}}
						</div>
						<span>Return to <a href="sign-in.html">sign in</a></span>
						{{ form_end(form)}}
				</div>
			</div>
		</div>
	</div>
</div> 
{% endblock %}    

