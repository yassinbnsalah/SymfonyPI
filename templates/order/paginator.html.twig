<nav aria-label="Page navigation example">
   
    <ul class="pagination justify-content-center mb-0">

        {% if previous is defined %}
      <li class="page-item ">
        <a class="page-link mx-1 rounded" href="{{ path(route, query|merge({(pageParameterName): previous})) }}"  ><i
            class="mdi mdi-chevron-left"></i></a>
      </li>
      {% else %}
      <li class="page-item disabled">
        <a class="page-link mx-1 rounded" ><i
            class="mdi mdi-chevron-left"></i></a>
      </li>
      {% endif %}

      {% if  app.request.get('page') %}
      <li class="page-item active">
        <a class="page-link mx-1 rounded" href="#!">{{ app.request.get('page') }}</a>
      </li>
      {% else %}
      <li class="page-item active">
        <a class="page-link mx-1 rounded" href="#!">1</a>
      </li>
      {% endif %}

      {% if next is defined %}
      <li class="page-item">
        <a class="page-link mx-1 rounded" href="{{ path(route, query|merge({(pageParameterName): next})) }}"><i class="mdi mdi-chevron-right"></i></a>
      </li>
      {% else %}
      <li class="page-item disabled">
        <a class="page-link mx-1 rounded" ><i class="mdi mdi-chevron-right"></i></a>
      </li>
  {% endif %}

    </ul>
  </nav>