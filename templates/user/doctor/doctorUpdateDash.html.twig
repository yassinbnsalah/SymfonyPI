{% extends 'baseadmin.html.twig' %}


{% block body %}

<div class="container-fluid p-4">
    <div class="row">
      <!-- Page Header -->
      <div class="col-lg-12 col-md-12 col-12">
        <div class="border-bottom pb-4 mb-4 d-lg-flex align-items-center justify-content-between">
          <div class="mb-2 mb-lg-0">
            <h1 class="mb-1 h2 font-weight-bold">All Doctor</h1>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="{{ path('admindash') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item"><a href="{{ path('listeDoctor') }}">Doctor</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                   Update Doctor
                </li>
              </ol>
            </nav>
          </div>
    
        </div>
      </div>
    </div>
   <div class="col-lg-9 col-md-8 col-12">
                <!-- Card -->
        
                    
                    <div class="card mb-4">
                        <!-- Card Header -->
                        <div class="card-header">
                           <h4 class="mb-0">Update Doctor</h4>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                           <!-- Form -->
                           {{ form_start(form , {'attr':{class: 'row' , novalidate: 'novalidate'}} ) }}
                              <div class="form-group col-12 col-md-12 col-lg-6">
                                 <label for="Cin" class="form-label">Cin <span class="text-danger">*</span></label>
                                 {{ form_widget(form.CIN , {'attr' : {'class' : 'form-control'}})}}
                              </div>
                              <div class="form-group col-12 col-md-12 col-lg-6">
                                 <label for="Name" class="form-label">Name<span class="text-danger">*</span> </label>
                                 {{ form_widget(form.Name , {'attr' : {'class' : 'form-control '}})}}
                              </div>
                              <div class="form-group col-12 col-md-12 col-lg-6">
                                 <label for="Adresse" class="form-label">Adresse<span class="text-danger">*</span> </label>
                                 {{ form_widget(form.Adresse , {'attr' : {'class' : 'form-control'}})}}
                              </div>
                              <div class="form-group col-12 col-md-12 col-lg-6">
                                 <label for="Age" class="form-label">Age<span class="text-danger">*</span>  </label>
                                  {{ form_widget(form.Age , {'attr' : {'class' : 'form-control'}})}}
                              </div>
                               <div class="form-group col-12 col-md-12 col-lg-6">
                                 <label for="NumeroTel" class="form-label">NumeroTel<span class="text-danger">*</span>  </label>
                                  {{ form_widget(form.Numero , {'attr' : {'class' : 'form-control'}})}}
                              </div>
                               <div class="form-group col-12 col-md-12 col-lg-6">
                                 <label for="Email" class="form-label">Email<span class="text-danger">*</span>  </label>
                                  {{ form_widget(form.Email , {'attr' : {'class' : 'form-control'}})}}
                              </div>
                               <div class="form-group col-12 col-md-12 col-lg-6">
                                 <label for="Password" class="form-label">Password<span class="text-danger">*</span>  </label>
                                  {{ form_widget(form.Password , {'attr' : {'class' : 'form-control'}})}}
                              </div>
                              <div class="form-group col-12 col-md-12 col-lg-6">
                                 <label for="confirm_password" class="form-label">Confirm Password<span class="text-danger">*</span>  </label>
                                  {{ form_widget(form.confirm_password , {'attr' : {'class' : 'form-control'}})}}
                              </div>
                           
                              <div class="col-12 col-md-12 col-lg-6">
                                {{ form_widget(form.save , {'attr' : {'class' : 'btn btn-primary' }})}}
                                 <a href="#!" class="btn btn-outline-white">
                                 Cancel
                                 </a>
                              </div>
                              {{ form_end(form)}}
                        </div>
                     </div>
              
            </div>
        </div>
    </div>
</div>

{% endblock %}