{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}


<!-- Page content -->
<div class="container d-flex flex-column mt-5 mb-5">
    <div class="row align-items-center justify-content-center no-gutters min-vh-100">
        <div class="col-lg-5 col-md-8 py-8 py-xl-0">
            <!-- Card -->
            <div class="card shadow">
                <!-- Card body -->
                <div class="card-body p-6">
                    <div class="mb-4">
                        <a href="/"><img src="../assets/images/brand/logo/logo-icon.svg" class="mb-4" alt="" /></a>
                        <h1 class="mb-1 font-weight-bold">Sign up</h1>
                        <span>Already have an account?
                            <a href="{{ path('app_login') }}" class="ml-1">Sign in</a></span>
                    </div>
                    <!-- Form -->
                    {{ form_start(form , {'attr':{novalidate: 'novalidate'}} ) }}
                    
                            <!-- CIN -->
                        <div class="form-group">
                            <label for="CIN" class="form-label">CIN</label>
                     
                        {{ form_widget(form.CIN , {'attr' : {'class' : 'form-control' , 'placeholder':'CIN'}})}}
                        {{ form_errors(form.CIN )}}
                        </div>
                               <!-- Username -->
                        <div class="form-group">
                            <label for="Name" class="form-label">Name</label>
                     
                            {{ form_widget(form.Name , {'attr' : {'class' : 'form-control' , 'placeholder':'Name'}})}}
                            {{ form_errors(form.Name )}}
                        </div>
                             <!-- CIN -->
                        <div class="form-group">
                           
                          
                           {{ form_row(form.image, {'attr':{'placeholder': 'Your photo ' , id : 'customFile1'}}) }}
                           {{ form_errors(form.image )}}
                        </div>
                            <!-- Adresse -->
                        <div class="form-group">
                            <label for="Adresse" class="form-label">Adresse</label>
                     
                            {{ form_widget(form.Adresse , {'attr' : {'class' : 'form-control' , 'placeholder':'Adresse'}})}}
                        {{ form_errors(form.Adresse )}}
                        </div>
                            <!-- Age -->
                        <div class="form-group">
                            <label for="Age" class="form-label">Age</label>
                     
                            {{ form_widget(form.Age , {'attr' : {'class' : 'form-control' , 'placeholder':'Age'}})}}
                       {{ form_errors(form.Age )}}
                        </div>
                              <!-- NumeroTel -->
                        <div class="form-group">
                            <label for="Numero" class="form-label">NumeroTel</label>
                     
                            {{ form_widget(form.Numero , {'attr' : {'class' : 'form-control' , 'placeholder':'Numero'}})}}
                            {{ form_errors(form.Numero )}}
                        </div>
                            <!-- Email -->
                        <div class="form-group">
                            <label for="Email" class="form-label">Email</label>
                            {{ form_widget(form.Email , {'attr' : {'class' : 'form-control', 'placeholder':'xxxxxx@xxx.xx'}})}}
                             {{ form_errors(form.Email )}}
                        </div>
                            <!-- Password -->
                        <div class="form-group">
                            <label for="Password" class="form-label">Password</label>
                            {{ form_widget(form.Password , {'attr' : {'class' : 'form-control', 'placeholder':'Password'}})}}
                         {{ form_errors(form.Password )}}
                        </div>
                        <!-- confirme Password -->
                        <div class="form-group">
                            <label for="confirm_password" class="form-label">Confirm Password</label>
                            {{ form_widget(form.confirm_password, {'attr' : {'class' : 'form-control','placeholder':'Password'}})}}
                        {{ form_errors(form.confirm_password )}}
                        </div>
                            <!-- Checkbox -->
                        <div>
                                <!-- Button -->
                            
                            {{ form_widget(form.save , {'attr' : {'class' : 'btn btn-primary btn-block' , 'value':'Create Free Account'}})}}
                        </div>
                        <hr class="my-4" />
                        <div class="mt-4 text-center">
                            <!--Facebook-->
                            <a href="#!" class="btn-social btn-social-outline btn-facebook">
                                <i class="fab fa-facebook"></i>
                            </a>
                            <!--Twitter-->
                            <a href="#!" class="btn-social btn-social-outline btn-twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <!--LinkedIn-->
                            <a href="#!" class="btn-social btn-social-outline btn-linkedin">
                                <i class="fab fa-linkedin"></i>
                            </a>
                            <!--GitHub-->
                            <a href="#!" class="btn-social btn-social-outline btn-github">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>
                   {{ form_end(form)}}

                 
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
