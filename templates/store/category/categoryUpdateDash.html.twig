{% extends 'baseadmin.html.twig' %}


{% block body %}

<div class="container-fluid p-4">
    <div class="row">
      <!-- Page Header -->
      <div class="col-lg-12 col-md-12 col-12">
        <div class="border-bottom pb-4 mb-4 d-lg-flex align-items-center justify-content-between">
          <div class="mb-2 mb-lg-0">
            <h1 class="mb-1 h2 font-weight-bold">Update Category</h1>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="{{ path('admindash') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item"><a href="{{ path('categoryListe') }}">Category</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                   Update Category
                </li>
              </ol>
            </nav>
          </div>
    
        </div>
      </div>
    </div>
   <div class="col-lg-12 col-md-12 col-12">
                <!-- Card -->
        
                    
                    <div class="card mb-4">
                        <!-- Card Header -->
                        <div class="card-header">
                           <h4 class="mb-0">Update Category</h4>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                           <!-- Form -->
                           {{ form_start(form , {'attr':{class: 'row' , novalidate: 'novalidate'}} ) }}
                              <div class="form-group col-4 col-md-12 col-lg-6">
                                 <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                                 {{ form_widget(form.name , {'attr' : {'class' : 'form-control'}})}}
                              </div>
                              <div class="form-group col-12 col-md-12 col-lg-6">
                                <label for="name" class="form-label">Slug <span class="text-danger">*</span></label>
                                {{ form_widget(form.slug , {'attr' : {'class' : 'form-control'}})}}
                             </div>
                              <div class="col-12 col-md-12 col-lg-6">
                                {{ form_widget(form.save , {'attr' : {'class' : 'btn btn-primary btn-sm' }})}}
                                 <a href="{{ path('categoryListe') }}" class="btn btn-outline-white btn-sm">
                                 Cancel
                                 </a>
                              </div>
                              {{ form_end(form)}}
                        </div>
                     </div>
              
            </div>
        </div>
    </div>
</div>

{% endblock %}